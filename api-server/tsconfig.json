{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "noEmit": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
